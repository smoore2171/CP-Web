@model CPWeb.Citation
<div>
    <h2>Edit Citation:</h2>
	<br/>
    @using (Html.BeginForm("UpdateCitation", "Admin", FormMethod.Post, new {  })) {
         	@Html.HiddenFor(vm => vm.id)
		    <div class="row-fluid">
		        <div class="span6">
		            <label for="title2">Title</label>
		        </div>
				<div class="span6">
		            @Html.TextBoxFor(vm => vm.title, new { id="title2" })
		        </div>
		        <br/>

		    </div>
			<div class="row-fluid">
		        <div class="span6">
		            @Html.LabelFor(vm => vm.citation)
		        </div>
				<div class="span6">
		            @Html.TextAreaFor(vm => vm.citation)
		        </div>
		        <br/>

		    </div>
			<div class="row-fluid">
		        <div class="span6">
		             <label for="scene.id">Scene Id</label>
		        </div>
				<div class="span6">
		            @Html.TextBoxFor(vm => vm.scene.id)
		        </div>
		        <br/>

		    </div>

		    <input type="submit" class="btn btn-primary" value="Submit Changes"/>
    }

</div>

    