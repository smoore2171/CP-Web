@model IEnumerable<CPWeb.Citation>
<div>
    <h2>Citations</h2>
	<br/>
	<table class="datatable display table table-bordered dataTable">
		<thead>
			<th>Scene</th>
			<th style="width:20%;">Title</th>
			<th style="width:50%;">Citation</th>
			<th>Actions</th>
		</thead>
		<tbody>
		@foreach(CPWeb.Citation s in Model)
		{
			<tr>
				<td>@s.scene.name</td>
				<td>@s.title</td>
				<td>@s.citation</td>
				<td><div class="btn-group"><button data-toggle="dropdown" class="btn btn-primary dropdown-primary">
					<span class="icon-wrench icon-white"></span> Actions</button>
					<button data-toggle="dropdown" class="btn btn-primary dropdown-toggle">
					<span class="caret"></span></button><ul class="dropdown-menu">
					<li><a href="/Admin/UpdateCitation/@s.id"><i class="icomoon-icon-pencil"></i> Edit Citation</a></li></ul></div></td>
			</tr>
		}
		</tbody>
	</table>


	<script>
		 $(document).ready(function() { 	                   
    var oTable = $('.datatable').dataTable({
        "sPaginationType": "full_numbers",
        "bJQueryUI": false,
        "bAutoWidth": false,
        "bLengthChange": false,
        "iDisplayLength": 15,
        "fnInitComplete": function(oSettings, json) {
            $('.dataTables_filter>label>input').attr('id', 'search');
        },
    });
	});
	</script>
</div>

	